{
  "name" : "JWT scanner",
  "version" : "1.0",
  "description" : "Looks for cookies and picks up JWTs",
  "permissions": [ "storage","tabs","cookies","<all_urls>"],
  "background" : {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_popup":"popup.html",
    "default_icon": "extension-inactive.png"
  },
  "manifest_version": 2
}